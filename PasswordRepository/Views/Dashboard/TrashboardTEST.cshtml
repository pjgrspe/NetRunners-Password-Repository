@model PasswordRepository.Models.PasswordEntryModel
@using PasswordRepository.Helpers;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Home</title>
    <link href="~/Style/StyleSheetButtonEditTrash.css" rel="stylesheet">
    <link href="~/Style/StyleSheetTrashboard.css" rel="stylesheet">
</head>
<body>
    <!--Navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container" id="navcontainer">
            <!--Navbar Logo-->
            <a href="/Home/Index" class="navbar-brand">
                <img src="~/Elements/ICElogo200pixel.png" width="150" height="67" alt="">
            </a>
            <!--Navbar Hamburger Menu-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!--Navbar Items-->
            <div class="collapse navbar-collapse" id="navmenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a href="/Home/Index" class="nav-link nav-link-normal" id="navhome">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a href="#team" class="nav-link nav-link-normal" id="navteam">TEAM</a>
                    </li>
                    <li class="nav-item">
                        <a href="#contact" class="nav-link nav-link-normal" id="navcontact">CONTACT</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link nav-link-dropdown" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="text-transform:uppercase">

                            @*USERNAME DISPlAY FOR THE RESPECTIVE USERID*@
                            @Session["Username"].ToString()

                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end" aria-labelledby="navbarDarkDropdownMenuLink">
                            <li><a class="dropdown-item" href="@Url.Action("index", "Dashboard")">Dashboard</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "PINInterface")">Lock</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("LogOut", "Login")">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <div id="outer">
        <!--Content-->
        <section class="text-light p-5">
            <div class="container d-flex justify-content-center" id="maincontainer">
                <div class="justify-content-center col-12" id="content">
                    <!--Title-->
                    <div class="d-flex justify-content-center col-12" id="title" style="display:block; white-space:nowrap; margin-left:auto; margin-right:auto;">
                        <h2 align="center">
                            / TRASH BIN /
                        </h2>
                    </div>
                    <div class="d-flex justify-content-center col-12">
                        <p>Items stored here will be deleted in 30 days.</p>
                    </div>
                    <!--TABLE-->
                    <div class="d-flex justify-content-center" style="margin-top:5px">
                        <div class="row w-75" id="passrepotable">
                            <!--ITEMS-->
                            <div class="col-4" id="table-leftcolumn">
                                <!--Search bar-->
                                <div class="d-flex justify-content-center">
                                    <a style="width:95%">
                                        <div class="input-group" style="margin-top:10px;">
                                            <span class="input-group-text rounded-0" id="basic-addon1"><img id="searchicon" src="~/Elements/searchicon.png" /></span>
                                            <input type="text" class="form-control form-control-search rounded-0" placeholder="SEARCH" aria-label="Username" aria-describedby="basic-addon1" id="searchform">
                                        </div>
                                    </a>
                                </div>
                                <!-- Button trigger DELETE ALL -->
                                <div class="d-flex justify-content-center">
                                    <button type="button" class="btn btn-outline-secondary rounded-0" data-bs-toggle="modal" data-bs-target="#addbutton-modal" id="deleteallbtn" style="margin-top:10px;" onclick="DeleteAllEntry('@Session["ID"]')">
                                        DELETE ALL
                                    </button>
                                </div>
                                <div class="list-group rounded-0 overflow-auto flipped scroller" id="list-tab" role="tablist" style="margin-top:10px; height:500px;">
                                    @{foreach (var PassEntry in Model.Passwords.Where(x => x.UID.Equals((int)Session["ID"]) && x.isTrashed.Equals(true) && x.isActive.Equals(true)))
                                        {
                                            <a class="list-group-item list-group-item-action" id="list-@PassEntry.PID-list" data-bs-toggle="list" href="#list-@PassEntry.PID" role="tab" aria-controls="list-@PassEntry.PID">@PassEntry.PR_TITLE</a>
                                        }
                                    }
                                </div>
                            </div>
                            <!--ITEM DETAILS-->
                            <div class="col-8" id="table-rightcolumn">
                                <div class="tab-content" id="nav-tabContent">
                                    @{foreach (var PassEntry in Model.Passwords.Where(x => x.UID.Equals((int)Session["ID"]) && x.isTrashed.Equals(true) && x.isActive.Equals(true)))
                                        {
                                            var decryptedPassword = Encrypter.DecryptString(PassEntry.PR_PASSWORD);
                                            <!--ITEM 1 DETAILS-->
                                    <div class="tab-pane show" id="list-@PassEntry.PID" role="tabpanel" aria-labelledby="list-@PassEntry.PID-list">
                                        <div class="container">
                                            <!--TITLE NAME-->
                                            <div class="mt-3 item-table w-100">
                                                <h2 class="display-5">
                                                    @PassEntry.PR_TITLE
                                                </h2>
                                                <!--USERNAME INPUT-->
                                                <div class="mt-3 tbl-details">
                                                    <div class="form-floating table-form">
                                                        <p style="margin-bottom:-5px;">Username</p>
                                                        @*<input type="text" readonly class="form-control-plaintext" style="width:100%" id="staticUsername" value="@PassEntry.PR_USERNAME"> id = "Username-"+PassEntry.PID.ToString()      *@
                                                        @Html.TextBoxFor(Model => Model.textbox_PR_USERNAME, new { @class = "form-control-plaintext", id = "Username-" + PassEntry.PID.ToString(), type = "text", @readonly = "readonly", Value = PassEntry.PR_USERNAME, style = "width:100%" })
                                                    </div>
                                                </div>
                                                <!--EMAIL INPUT-->
                                                <div class="mt-3 tbl-details">
                                                    <div class="form-floating table-form">
                                                        <p style="margin-bottom:-5px;">Email</p>
                                                        @*<input type="email" readonly class="form-control-plaintext" style="width:100%" id="staticEmail" value="@PassEntry.PR_EMAIL">*@
                                                        @Html.TextBoxFor(Model => Model.textbox_PR_EMAIL, new { @class = "form-control-plaintext", id = "Email-" + PassEntry.PID.ToString(), type = "text", @readonly = "readonly", Value = @PassEntry.PR_EMAIL, style = "width:100%" })
                                                    </div>
                                                </div>
                                                <!--PASSWORD INPUT-->
                                                <div class="mt-3 tbl-details">
                                                    <div class="form-floating table-form">
                                                        <p style="margin-bottom:-5px;">Password</p>
                                                        @*<input type="password" readonly class="form-control-plaintext" style="width:100%" id="staticPassword" value="@decryptedPassword">*@
                                                        @Html.PasswordFor(Model => Model.textbox_PR_PASSWORD, new { @class = "form-control-plaintext", id = "Password-" + PassEntry.PID.ToString(), type = "password", required = "required", @readonly = "readonly", Value = @decryptedPassword, style = "width:100%" })
                                                        <span>
                                                            <!--Eye and CC icon-->
                                                            <img src="~/Elements/eye-white.svg" class="eyeiconpassword-@PassEntry.PID" id="eyeiconPassword-@PassEntry.PID" />
                                                        </span>
                                                        <script type="text/javascript">
                                                                // Wrap your code inside a function
                                                                function initializeCCIcon() {
                                                                    let eyeicontbl = document.getElementById('eyeiconPassword-@PassEntry.PID.ToString()');
                                                                    var formdisplay = document.getElementById('Password-@PassEntry.PID.ToString()');

                                                                    // Make sure the elements are not null before accessing their properties
                                                                    if (formdisplay && eyeicontbl) {

                                                                    eyeicontbl.style.display = "block";

                                                                    formdisplay.addEventListener("mouseleave", function () {
                                                                        const isTargetIcon = event.relatedTarget === ccicon || ccicon.contains(event.relatedTarget);

                                                                        if (!isTargetIcon) {
                                                                            ccicon.style.display = "none";
                                                                        }
                                                                    });

                                                                    eyeicontbl.addEventListener("mouseenter", function () {
                                                                        formdisplay.classList.add("hover");
                                                                    });

                                                                    eyeicontbl.addEventListener("mousedown", function (event) {
                                                                        event.preventDefault(); // prevent default action to avoid losing focus
                                                                        toggleshowPW_table();
                                                                    });

                                                                    function toggleshowPW_table() {
                                                                        var show = document.getElementById('Password-@PassEntry.PID.ToString()');
                                                                        if (show.type == 'password') {
                                                                            //THIS IS FOR THE EDIT BUTTON
                                                                            //document.getElementById('staticPassword').readOnly=false;
                                                                            //document.getElementById('staticPassword').className = "form-control";
                                                                            show.type = 'text';
                                                                            eyeicontbl.src = "/Elements/eye-slash-white.svg"
                                                                        }
                                                                        else {
                                                                            show.type = 'password'
                                                                            //THIS IS FOR THE EDIT BUTTON
                                                                            //document.getElementById('staticPassword').readOnly=true;
                                                                            //document.getElementById('staticPassword').className = "form-control-plaintext";
                                                                            eyeicontbl.src = "/Elements/eye-white.svg"

                                                                        }
                                                                        show.focus();
                                                                    }
                                                                    }

                                                                }
                                                                  // Call the function after the document has finished loading
                                                                  window.addEventListener('load', initializeCCIcon);
                                                        </script>
                                                    </div>
                                                </div>
                                                <!--URL INPUT-->
                                                <div class="mt-3 tbl-details">
                                                    <div class="form-floating table-form">
                                                        <p style="margin-bottom:-5px;">URL</p>
                                                        @*<input type="text" readonly class="form-control-plaintext" style="width:100%" id="staticURL" value="@PassEntry.PR_URL">*@
                                                        @Html.TextBoxFor(Model => Model.textbox_PR_URL, new { @class = "form-control-plaintext", id = "URL-" + PassEntry.PID.ToString(), type = "text", @readonly = "readonly", Value = @PassEntry.PR_URL, style = "width:100%" })
                                                    </div>
                                                </div>
                                                <!--NOTES INPUT-->
                                                <!--LUIS-->
                                                <div class="mt-3 tbl-details">
                                                    <div class="form-floating table-form">
                                                        <p style="margin-bottom:-5px;">Notes</p>
                                                        <textarea type="text" style="text-align: left; height: 100px; width: 100%" readonly class="form-control-plaintext form-control-notes" id=Notes-@PassEntry.PID.ToString()>@PassEntry.PR_NOTES</textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--DATE INPUT-->
                                            <div class="col-12 d-flex justify-content-center">
                                                <div class="mt-4" style="color:gray; margin-right:60px;">
                                                    <p>Will be permanently deleted on @PassEntry.EXPIRY_DATE</p>
                                                </div>
                                            </div>
                                        </div>
                                        <nav class="menu">
                                            <input type="checkbox" href="#" class="menu-open" name="menu-open" id="menu-open-@PassEntry.PID" />
                                            <label class="menu-open-button" for="menu-open-@PassEntry.PID">
                                                <span class="lines line-1"></span>
                                                <span class="lines line-2"></span>
                                                <span class="lines line-3"></span>
                                            </label>
                                            <!--LUIS-->
                                            <a class="menu-item red" onclick="permDeleteEntry('@PassEntry.PID')"> <i class="fa fa-trash"></i> </a>
                                            <a class="menu-item green" onclick="restoreEntry('@PassEntry.PID')"> <i class="fa fa-undo"></i> </a>
                                        </nav>
                                    </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>

<!--LUIS-->
<script type="text/javascript">

    function restoreEntry(passwordID) {

        if (confirm("Are you sure you want to restore this entry?")) {

            var data = {
                passwordID: passwordID
            }

            $.ajax({
                type: "POST",
                url: "/Dashboard/RestoreEntry",
                dataType: "JSON",
                data: JSON.stringify(data),
                contentType: 'application/json; charset=utf8',
                success: function (res) {
                    alert(res.msg)
                    location.reload(true);
                },
                error: function () {
                    alert("An error occurred (Javascript)")
                }
            })

        }

    }

    function permDeleteEntry(passwordID) {

        if (confirm("Are you sure you want to permanently delete this entry?")) {

            var data = {
                passwordID: passwordID
            }

            $.ajax({
                type: "POST",
                url: "/Dashboard/PermDeleteEntry",
                dataType: "JSON",
                data: JSON.stringify(data),
                contentType: 'application/json; charset=utf8',
                success: function (res) {
                    alert(res.msg)
                    location.reload(true);
                },
                error: function () {
                    alert("An error occurred (Javascript)")
                }
            })

        }

    }

    function DeleteAllEntry(userID) {

        if (confirm("Are you sure you want to permanently delete everything?")) {

            var data = {
                userID: userID
            }

            $.ajax({
                type: "POST",
                url: "/Dashboard/DeleteAllEntry",
                dataType: "JSON",
                data: JSON.stringify(data),
                contentType: 'application/json; charset=utf8',
                success: function (res) {
                    alert(res.msg)
                    location.reload(true);
                },
                error: function () {
                    alert("An error occurred (Javascript)")
                }
            })

        }

    }
</script>