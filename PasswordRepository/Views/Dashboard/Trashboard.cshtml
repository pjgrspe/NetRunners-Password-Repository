</body>
</html>

<script type="text/javascript">
    function restoreEntry(passwordID,title) {
        //Confirmation message before restoring entry
        Swal.fire({
            title: 'Restore "'+title+'"?',
            text: "This will restore the item.",
            icon: 'question',
            iconColor: '#2973b9',
            background: '#1a1a1a',
            showCancelButton: true,
            confirmButtonColor: '#70cc72',
            cancelButtonColor: '#fe4365',
            confirmButtonText: 'Confirm'
        }).then((result) => {
            if (result.isConfirmed) {
                //Packages the received variable
                var data = {
                    passwordID: passwordID
                }

                $.ajax({
                    type: "POST",
                    url: "/Dashboard/RestoreEntry",
                    dataType: "JSON",
                    data: JSON.stringify(data),
                    contentType: 'application/json; charset=utf8',
                    success: function () {
                    },
                    error: function () {
                    }
                })
                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    background: '#1a1a1a',
                    iconColor: '#70cc72',
                    title: '"' + title + '" successfuly restored!',
                    showConfirmButton: false,
                    timer: 2500
                })
                    .then(function () {
                        location.reload(true);
                    }
                    )
            }
        })        
    }

    function permDeleteEntry(passwordID,title) {

        //Confirmation message before permanently deleting entry
        Swal.fire({
            title: 'Permanently delete "'+title+'"?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            iconColor: '#c40f2d',
            background: '#1a1a1a',
            showCancelButton: true,
            confirmButtonColor: '#70cc72',
            cancelButtonColor: '#fe4365',
            confirmButtonText: 'Confirm'
        }).then((result) => {
            if (result.isConfirmed) {
                //Packages the received variable
                var data = {
                    passwordID: passwordID
                }

                $.ajax({
                    type: "POST",
                    url: "/Dashboard/PermDeleteEntry",
                    dataType: "JSON",
                    data: JSON.stringify(data),
                    contentType: 'application/json; charset=utf8',
                    success: function () {

                    },
                    error: function () {
                        alert("An error occurred")
                    }
                })

                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    iconColor: '#70cc72',
                    background: '#1a1a1a',
                    title: '"' + title + '" permanently deleted!',
                    showConfirmButton: false,
                    timer: 2500
                })
                    .then(function () {
                        location.reload(true);
                    }
                    )
            }
        })        
    }

    function DeleteAllEntry(userID) {

        //Confirmation message before permanently deleting entry
        Swal.fire({
            title: 'Permanently delete all items?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            iconColor: '#c40f2d',
            background: '#1a1a1a',
            showCancelButton: true,
            confirmButtonColor: '#70cc72',
            cancelButtonColor: '#fe4365',
            confirmButtonText: 'Confirm'
        }).then((result) => {
            if (result.isConfirmed) {
                var data = {
                    userID: userID
                }

                $.ajax({
                    type: "POST",
                    url: "/Dashboard/DeleteAllEntry",
                    dataType: "JSON",
                    data: JSON.stringify(data),
                    contentType: 'application/json; charset=utf8',
                    success: function () {
                    },
                    error: function () {
                        alert("An error occurred (Javascript)")
                    }
                })
                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    iconColor: '#70cc72',
                    background: '#1a1a1a',
                    title: 'All items permanently deleted!',
                    showConfirmButton: false,
                    timer: 2500
                })
                    .then(function () {
                        location.reload(true);
                    }
                    )
                }
            })
    }
    function RestoreAllEntry(userID) {

        //Confirmation message before permanently deleting entry
        Swal.fire({
            title: 'Restore passwords?',
            text: "Every deleted passwords will be restored!",
            icon: 'warning',
            iconColor: '#c40f2d',
            background: '#1a1a1a',
            showCancelButton: true,
            confirmButtonColor: '#70cc72',
            cancelButtonColor: '#fe4365',
            confirmButtonText: 'Confirm'
        }).then((result) => {
            if (result.isConfirmed) {
                var data = {
